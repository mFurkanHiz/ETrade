@model ETrade.UI.Models.ViewModel.ProductsModel

<h4>@Model.Head</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input type="hidden" asp-for="SelectedProducts.Id" class="form-control" />

            </div>

            <div class="form-group">
                <label asp-for="SelectedProducts.Price" class="control-label"></label>
                <input asp-for="SelectedProducts.Price" class="form-control" />
                <span asp-validation-for="SelectedProducts.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedProducts.CategoryId" class="control-label"></label>
                @*<select asp-for="SelectedProducts.CategoryId" class="form-control" asp-items="ViewBag.SelectedProducts.CategoryId"></select>*@
                <select  class="form-control" name="SelectedProducts.CategoryId">
                    @* seçilen değeri name (SelectedProducts.CategoryId) içine yazmış oluyoruz
                    field ismi olduğu için başına @Model yazmadan çağırıyoruz
                    *@
                    @foreach (var item in Model.Categories)
                    {
                        @if (Model.SelectedProducts.CategoryId == item.Id)
                        {
                            <option selected value="@item.Id">@item.Name</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="SelectedProducts.Name" class="control-label"></label>
                <input asp-for="SelectedProducts.Name" class="form-control" />
                <span asp-validation-for="SelectedProducts.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Model.Text" class="@Model.Class" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-warning" asp-action="List">Cancel</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
