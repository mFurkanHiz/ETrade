@model ETrade.UI.Models.ViewModel.FoodsModel

@{
    ViewData["Title"] = "Crud";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>@Model.Head</h1>

<h4>Foods</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SelectedFood.FoodId" />
            <div class="form-group">
                <label asp-for="SelectedFood.FoodName" class="control-label"></label>
                <input asp-for="SelectedFood.FoodName" class="form-control" />
                <span asp-validation-for="SelectedFood.FoodName" class="text-danger"></span>
            </div>
 @*           <div class="form-group">
                <label asp-for="SelectedFood.UnitPrice" class="control-label"></label>
                <input asp-for="SelectedFood.UnitPrice" class="form-control" />
                <span asp-validation-for="SelectedFood.UnitPrice" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="SelectedFood.Description" class="control-label"></label>
                <input asp-for="SelectedFood.Description" class="form-control" />
                <span asp-validation-for="SelectedFood.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedFood.Img" class="control-label"></label>
                <input asp-for="SelectedFood.Img" class="form-control" />
                <span asp-validation-for="SelectedFood.Img" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Kategori</label>
                <select name="Foods.CategoryId">
                    @foreach (var item in Model.Categories)
                    {
                        <option class="form-control" value="@item.CategoryId">@item.CategoryName</option>
                    }
                </select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="@Model.Text" class="@Model.Class" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

